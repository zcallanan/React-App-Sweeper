.lives-enter
  transform translateY(100%)
  -webkit-transform translateY(100%)
  &.lives-enter-active
    transform translateY(0)
    -webkit-transform translateY(0)
    transition 1.5s
    -webkit-transition 1.5s

.lives-exit
  transform translateY(0)
  -webkit-transform translateY(0)
  position absolute
  left 0
  bottom 0
  &.lives-exit-active
    transform translateY(-100%)
    -webkit-transform translateY(-100%)
    transition 1.5s
    -webkit-transition 1.5s

span.lives
  position relative
  overflow hidden
  float left
  span
    display inline-block
