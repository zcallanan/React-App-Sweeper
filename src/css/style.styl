// Import all partials
@require './_*.styl'

.form-group
  display flex
  flex-wrap wrap

.modes
  display flex
  flex-direction column
  margin-top 16px

.flag-mode
  cursor crosshair

.questionmark-mode
  cursor help

.buttons
  width 100%

.flag-button, .question-button
  margin-top 8px
  display flex
  align-items center
  justify-content space-between
  height 36px
  font-size 16px

.fa-w-16
  font-size 26px

.fa-flag, .fa-question-circle
  color rgba(20,30,40, .5)

.game-board
  width 100%
  display flex
  flex-direction column

.game-body, .modes
  width 100%
  display flex
  justify-content space-between

.form-fields
  display flex
  flex-direction column

.neighbors-1
  color rgb(34,66,252)

.neighbors-2
  color rgb(65,120,29)

.neighbors-3
  color rgb(216,68,33)

.neighbors-4
  color rgb(10,26,133)

.neighbors-5
  color rgb(101,17,9)

.neighbors-6
  color rgb(65,120,29)

.neighbors-7
  color rgb(95,90,59)

.neighbors-8
  color rgb(162,162,162)
