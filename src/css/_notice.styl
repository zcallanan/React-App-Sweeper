.notice-box
  width 100%
  text-align center
  height 20px
  overflow hidden
  margin-top 16px
  margin-bottom 16px

.notice
  display inline-block // for TranslateX


/* Animations */

.notices-enter
  transform translateX(-120%)
  &.notices-enter-active
    transform translatex(0)
    transition 2.5s
.notices-exit
  transform translatex(0)
  &.notices-exit-active
    transform translateX(120%)
    transition 2.5s
